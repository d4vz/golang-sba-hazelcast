{
    "swagger": "2.0",
    "info": {
        "description": "Online auction API built with Space Based Architecture using Hazelcast.",
        "title": "Auction SBA API",
        "contact": {},
        "version": "0.1.0"
    },
    "basePath": "/",
    "paths": {
        "/auctions": {
            "post": {
                "description": "Creates a new auction",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "summary": "Create an auction",
                "parameters": [
                    {
                        "description": "Auction",
                        "name": "auction",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/golang-sba-hazelcast_internal_auction.Auction"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Created"
                    },
                    "400": {
                        "description": "Bad Request"
                    }
                }
            }
        },
        "/auctions/active": {
            "get": {
                "produces": [
                    "application/json"
                ],
                "summary": "List active auctions",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/golang-sba-hazelcast_internal_auction.Auction"
                            }
                        }
                    },
                    "500": {
                        "description": "Internal Server Error"
                    }
                }
            }
        },
        "/work": {
            "get": {
                "summary": "Consume CPU cycles for autoscaling tests",
                "parameters": [
                    {
                        "type": "integer",
                        "default": 50,
                        "description": "Duration in milliseconds",
                        "name": "ms",
                        "in": "query"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK"
                    }
                }
            }
        }
    },
    "definitions": {
        "golang-sba-hazelcast_internal_auction.Auction": {
            "type": "object",
            "properties": {
                "description": {
                    "type": "string"
                },
                "ends_at": {
                    "type": "string"
                },
                "id": {
                    "type": "string"
                },
                "seller_id": {
                    "type": "string"
                },
                "starts_at": {
                    "type": "string"
                },
                "title": {
                    "type": "string"
                }
            }
        }
    }
}